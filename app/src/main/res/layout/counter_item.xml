<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRevealLayout"
    app:dragEdge="right"
    app:mode="same_level"
    >
    <FrameLayout
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:clickable="true"
        android:background="@android:color/holo_red_dark"
        android:focusable="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/delete_counter"
                android:layout_centerInParent="true"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_delete_black_24dp"
                android:tint="@android:color/white"/>
        </RelativeLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
        <RelativeLayout
            android:id="@+id/two_line_item"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:minHeight="72dp"
            android:paddingEnd="?listPreferredItemPaddingRight"
            android:paddingLeft="?listPreferredItemPaddingLeft"
            android:paddingRight="?listPreferredItemPaddingRight"
            android:paddingStart="?listPreferredItemPaddingLeft"
            >

            <ImageView
                android:id="@+id/counter_btn_less"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:scaleType="centerInside"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_remove_black_40dp"
                android:tint="@color/primary_dark"/>

            <LinearLayout
                android:id="@+id/lines_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignWithParentIfMissing="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_toEndOf="@+id/counter_btn_less"
                android:layout_toLeftOf="@+id/counter_btn_more"
                android:layout_toRightOf="@+id/counter_btn_less"
                android:layout_toStartOf="@+id/counter_btn_more"
                android:orientation="vertical"
                android:paddingBottom="16dp"
                android:paddingTop="16dp">

                <TextView
                    android:id="@+id/counter_label"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    tools:text="First Line"
                    android:layout_gravity="center"
                    android:textColor="@color/grey_600"/>

                <TextView
                    android:id="@+id/counter_number"
                    style="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="40sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    tools:text="Second Line"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/counter_btn_more"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:scaleType="centerInside"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_add_black_40dp"
                android:tint="@color/primary_dark"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    </FrameLayout>
</com.chauthai.swipereveallayout.SwipeRevealLayout>